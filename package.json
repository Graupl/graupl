{
  "name": "@graupl/graupl",
  "version": "1.0.0-alpha.2",
  "description": "A modular and modern CSS framework.",
  "type": "module",
  "exports": {
    ".": {
      "sass": "./scss"
    },
    "./base": {
      "sass": "./scss/base"
    },
    "./components": {
      "sass": "./scss/component"
    },
    "./layout": {
      "sass": "./scss/layout"
    },
    "./mixins": {
      "sass": "./scss/mixins"
    },
    "./state": {
      "sass": "./scss/state"
    },
    "./theme": {
      "sass": "./scss/theme"
    },
    "./utilities": {
      "sass": "./scss/utilities"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git cz",
    "eslint": "eslint .",
    "prettier": "prettier '**/*.{js,mjs,cjs,scss,sass}'",
    "stylelint": "stylelint '**/*.scss' --allow-empty-input",
    "lint": "npm run eslint -- --fix && npm run stylelint -- --fix && npm run prettier --  --write",
    "sass": "sass scss:dist",
    "postcss": "postcss 'dist/**/*.css' --replace",
    "build": "npm run sass && npm run postcss",
    "release": "git add dist/. && standard-version -a",
    "prerelease": "npm run lint && npm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Graupl/graupl.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Graupl/graupl/issues"
  },
  "homepage": "https://github.com/Graupl/graupl#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@eslint/js": "^9.0.0",
    "autoprefixer": "^10.4.19",
    "commitizen": "^4.3.0",
    "cssnano": "^6.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-discard-comments": "^6.0.2",
    "prettier": "^3.2.5",
    "sass": "^1.69.5",
    "standard-version": "^9.5.0",
    "stylelint": "^16.3.1",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.0",
    "vite": "^5.2.8",
    "vitepress": "^1.1.0"
  }
}
