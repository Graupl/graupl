{
  "name": "@graupl/graupl",
  "version": "1.0.0",
  "description": "The Graupl mono-repo",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "commit": "git cz",
    "eslint": "eslint .",
    "prettier": "prettier '**/*.{js,cjs,scss}'",
    "stylelint": "stylelint '**/*.scss'",
    "lint": "npm run eslint -- --fix && npm run prettier --  --write",
    "build": "sass scss:dist",
    "release": "git add dist/. && standard-version -a",
    "prerelease": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Graupl/graupl.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Graupl/graupl/issues"
  },
  "homepage": "https://github.com/Graupl/graupl#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.69.5",
    "standard-version": "^9.5.0",
    "stylelint": "^16.3.1",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.0"
  }
}
